#:kivy 1.9.1

#:set light_blue (.6, .6, 1, 1)

<WaypointerWidget>:
    id: waypointer_widget

    result_lbl: result_lbl
    waypoint_vector: waypoint_vector
    position_vector: position_vector
    guideme_btn: guideme_btn

    orientation: 'vertical'
    padding: 6
    spacing: 6

    Header:
        text: 'Waypoint'
    VectorTextInput:
        id: waypoint_vector
        on_heading: root.set_guideme_state()
        on_range: root.set_guideme_state()
    Header:
        text: 'Your position'
    VectorTextInput:
        id: position_vector
        on_heading: root.set_guideme_state()
        on_range: root.set_guideme_state()
    ButtonHeader:
        id: guideme_btn
        text: 'Guide me!'
        on_press: root.on_guideme_press()
        disabled: True
    Label
        id: result_lbl
        font_size: 18
        color: light_blue
        bold: True
        size: self.texture_size
        size_hint_y: None
    Widget
        # Filler


<Label, TextInput>:
    font_size: '20sp'

<Header@Label>:
    font_size: '28sp'
    bold: True
    size: self.texture_size
    size_hint_y: None

<ButtonHeader@Button+Header>:
    padding: 0, 20


<VectorTextInput@BoxLayout>:
    heading: heading_ti.heading
    range: range_ti.range

    size_hint_y: None
    height: heading_ti.height
    spacing: 6

    HeadingTextInput:
        id: heading_ti
        height: self.minimum_height
    Label:
        text: 'deg @'
        size_hint_x: None
        size: self.texture_size
    RangeTextInput:
        id: range_ti
        height: self.minimum_height
    Label:
        text: 'km'
        size_hint_x: None
        size: self.texture_size

<HeadingTextInput@ValidatedTextInput>:
    hint_text: 'Heading'
    input_type: 'number'
    input_filter: 'float'
    multiline: False


<RangeTextInput@ValidatedTextInput>:
    hint_text: 'Range'
    input_type: 'number'
    input_filter: 'float'
    multiline: False
