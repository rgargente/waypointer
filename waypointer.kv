#:kivy 1.9.1

#:set light_blue (.6, .6, 1, 1)

<WaypointerWidget>:
    result_lbl: result_lbl
    waypoint_had: waypoint_had
    position_had: position_had

    orientation: 'vertical'
    padding: 6
    spacing: 6

    Header:
        text: 'Waypoint'
    HeadingAndDist:
        id: waypoint_had
    Header:
        text: 'Your position'
    HeadingAndDist:
        id: position_had
    ButtonHeader:
        text: 'Guide me!'
        on_press: root.guideme_click()
    Label
        id: result_lbl
        font_size: 18
        color: light_blue
        bold: True
        size: self.texture_size
        size_hint_y: None
    Widget
        # Filler


<Header@Label>:
    font_size: 20
    bold: True
    size: self.texture_size
    size_hint_y: None

<ButtonHeader@Button+Header>:
    padding: 0, 10


<HeadingAndDist@BoxLayout>:
    heading: heading_ti.text
    dist: distance_ti.text

    size_hint_y: None
    height: heading_ti.height
    spacing: 6
    TextInput:
        id: heading_ti
        hint_text: 'Heading'
        multiline: False
        height: self.minimum_height
    Label:
        text: 'deg @'
        size_hint_x: None
        size: self.texture_size
    TextInput:
        id: distance_ti
        hint_text: 'Distance'
        multiline: False
        height: self.minimum_height
    Label:
        text: 'km'
        size_hint_x: None
        size: self.texture_size