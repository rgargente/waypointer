#:kivy 1.9.1

#:set light_blue (.6, .6, 1, 1)

<WaypointerWidget>:
    result_lbl: result_lbl
    waypoint_vector: waypoint_vector
    position_vector: position_vector

    orientation: 'vertical'
    padding: 6
    spacing: 6

    Header:
        text: 'Waypoint'
    VectorTextInput:
        id: waypoint_vector
    Header:
        text: 'Your position'
    VectorTextInput:
        id: position_vector
    ButtonHeader:
        text: 'Guide me!'
        on_press: root.guideme_click()
    Label
        id: result_lbl
        font_size: 18
        color: light_blue
        bold: True
        size: self.texture_size
        size_hint_y: None
    Widget
        # Filler

<Label, TextInput>:
    font_size: '20sp'

<Header@Label>:
    font_size: '28sp'
    bold: True
    size: self.texture_size
    size_hint_y: None

<ButtonHeader@Button+Header>:
    padding: 0, 20


<VectorTextInput@BoxLayout>:
    heading: heading_ti.text
    range: range_ti.text

    size_hint_y: None
    height: heading_ti.height
    spacing: 6

    TextInput:
        id: heading_ti
        hint_text: 'Heading'
        input_filter: 'float'
        multiline: False
        height: self.minimum_height
    Label:
        text: 'deg @'
        size_hint_x: None
        size: self.texture_size
    TextInput:
        id: range_ti
        hint_text: 'Range'
        input_filter: 'float'
        multiline: False
        height: self.minimum_height
    Label:
        text: 'km'
        size_hint_x: None
        size: self.texture_size