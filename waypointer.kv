#:kivy 1.9.1

<WaypointerWidget>:
    orientation: 'vertical'
    Header:
        text: 'Waypoint'
    BoxLayout:
        size_hint_y: None
        height: heading_ti.height
        padding: [6, 0]
        TextInput:
            id: heading_ti
            hint_text: 'Heading'
            multiline: False
            height: self.minimum_height
        Label:
            text: 'deg @'
            size_hint_x: None
            size: self.texture_size
            padding_x: 6
        TextInput:
            id: distance_ti
            hint_text: 'Distance'
            multiline: False
            height: self.minimum_height
        Label:
            text: 'km/nm/...'
            size_hint_x: None
            size: self.texture_size
            padding_x: 6
    Header:
        text: 'Your position'
    Widget
        # Filler

<Header@Label>:
    font_size: 20
    size: self.texture_size
    size_hint_y: None